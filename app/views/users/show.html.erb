<h1 class="text-xl font-bold mb-4">マイページ</h1>
<p><strong>名前:</strong> <%= @user.name %></p>
<p><strong>メール:</strong> <%= @user.email %></p>

<div class="mt-3">
  <%= link_to '編集', edit_user_path(@user), class: "text-blue-700 underline" %> |
  <%= button_to 'ログアウト', session_path, method: :delete, class: "text-red-700 underline" %>
</div>

<p class="mt-4 text-green-700"><%= notice %></p>
<p class="text-red-700"><%= alert %></p>
