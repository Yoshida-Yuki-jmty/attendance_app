<h1 class="text-xl font-bold mb-4">ユーザー情報を編集</h1>

<%= form_with model: @user, local: true, class: "space-y-3" do |f| %>
  <div>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name, required: true, class: "border rounded px-2 py-1 w-64" %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, required: true, class: "border rounded px-2 py-1 w-64" %>
  </div>

  <div>
    <%= f.label :password, "パスワード（変更する場合のみ入力）" %><br>
    <%= f.password_field :password, class: "border rounded px-2 py-1 w-64" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード確認" %><br>
    <%= f.password_field :password_confirmation, class: "border rounded px-2 py-1 w-64" %>
  </div>

  <div class="pt-2">
    <%= f.submit "更新", class: "px-4 py-2 rounded bg-blue-600 text-white" %>
  </div>
<% end %>

<p class="mt-4">
  <%= link_to "マイページへ戻る", @user, class: "text-blue-700 underline" %>
</p>

<p class="mt-4 text-green-700"><%= notice %></p>
<p class="text-red-700"><%= alert %></p>
