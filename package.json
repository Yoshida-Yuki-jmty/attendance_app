{
  "name": "attendance-app",
  "private": true,
  "dependencies": {
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "@tailwindcss/cli": "^4.1.12",
    "tailwindcss": "^4.1.12",
    "turbolinks": "^5.2.0"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "watch": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch",

    "build:css": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify --content \"./app/views/**/*.{erb,html}\" --content \"./app/javascript/**/*.{js,ts}\"",
    "watch:css": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch --content \"./app/views/**/*.{erb,html}\" --content \"./app/javascript/**/*.{js,ts}\""
  },
  "devDependencies": {
    "esbuild": "^0.25.9"
  }
}
